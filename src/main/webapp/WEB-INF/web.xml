<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Restaurant_voting</display-name>

    <servlet>
        <servlet-name>adminUserServlet</servlet-name>
        <servlet-class>org.ivan_kropachev.restaurant_voting.web.AdminUserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminUserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminRestaurantServlet</servlet-name>
        <servlet-class>org.ivan_kropachev.restaurant_voting.web.AdminRestaurantServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminRestaurantServlet</servlet-name>
        <url-pattern>/restaurants</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminDishServlet</servlet-name>
        <servlet-class>org.ivan_kropachev.restaurant_voting.web.AdminDishServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminDishServlet</servlet-name>
        <url-pattern>/dishes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminVoteServlet</servlet-name>
        <servlet-class>org.ivan_kropachev.restaurant_voting.web.AdminVoteServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminVoteServlet</servlet-name>
        <url-pattern>/votes</url-pattern>
    </servlet-mapping>

</web-app>
